[Desktop Entry]
Type=Application
Name=Minecraft
GenericName=Game
Comment=Break and place blocks to build imaginative things
Exec=java -jar /opt/minecraft/Minecraft.jar
Icon=/opt/minecraft/Sphax-PureBDcraftGrass.png
